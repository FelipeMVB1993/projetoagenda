<%- include('./includes/head') %>
<%- include('./includes/nav') %>

<div class="container">
  <div class="row">
    <div class="col-lg-2"></div>

    <div class="col-lg-8 my-3">

      <% if (user) { %>
        <h1 class="text-center">Agenda</h1>
        <p class="text-center lead">Seus contatos estão abaixo</p>

        <%- include('./includes/messages') %>

        <% if (contatos.length > 0) { %>
          <div class="responsive-table">
            <table class="table table-striped my-3">
              <thead>
                <tr>
                  <th>Nome</th>
                  <th>Sobrenome</th>
                  <th>Telefone</th>
                  <th>Email</th>
                  <th>Editar</th>
                  <th>Excluir</th>
                </tr>
              </thead>
              <tbody>
                <% contatos.forEach(contato => { %>
                  <tr>
                    <td><%= contato.nome %></td>
                    <td><%= contato.sobrenome %></td>
                    <td><%= contato.telefone %></td>
                    <td><%= contato.email %></td>
                    <td><a href="/contato/index/<%= contato._id %>" class="text-warning">Editar</a></td>
                    <td><a href="/contato/delete/<%= contato._id %>" class="text-danger">Excluir</a></td>
                  </tr>
                <% }) %>
              </tbody>
            </table>
          </div>
        <% } else { %>
          <p class="text-center lead alert alert-danger">Não existem contatos na sua agenda.</p>
        <% } %>

      <% } else { %>
        <h1 class="text-center">Agenda</h1>
        <p class="text-center lead alert alert-warning">
          Você precisa fazer login para visualizar os contatos.
        </p>
      <% } %>

    </div>

    <div class="col-lg-2"></div>
  </div>
</div>

<%- include('./includes/footer') %>
