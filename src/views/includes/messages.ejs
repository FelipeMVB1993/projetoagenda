<% if (typeof errors !== 'undefined' && errors.length > 0) { %>
  <div class="row">
    <div class="col my-3">
      <div class="alert alert-danger" role="alert">
        <% errors.forEach(erro => { %>
          <div><%= erro %></div>
        <% }) %>
      </div>
    </div>
  </div>
<% } %>

<% if (typeof success !== 'undefined' && success.length > 0) { %>
  <div class="row">
    <div class="col my-3">
      <div class="alert alert-success" role="alert">
        <% success.forEach(msg => { %>
          <div><%= msg %></div>
        <% }) %>
      </div>
    </div>
  </div>
<% } %>
